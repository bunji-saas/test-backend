{
  "name": "pet-shop",
  "private": true,
  "version": "0.0.1",
  "description": "Bunji app to manage a pet shop, used for testing purposes",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write . | grep -v \" (unchanged)\" | cat",
    "dev": "yarn start:dev",
    "start": "nest start --entryFile .",
    "start:dev": "nest start --watch --entryFile .",
    "start:debug": "nest start --debug --watch --entryFile .",
    "start:prod": "node dist/",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" && prettier --check .",
    "lint:apply": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "generate-resource": "nest generate resource"
  },
  "engines": {
    "node": "^22.16.0 || ^24.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.1.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.15.32",
    "axios": "^1.7.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "type-fest": "^4.30.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.34.0"
  }
}
